body {
	background-image: url(../img/clean.jpg); background-repeat: repeat
}

/*#fondo_index { background-image: url(../img/clean.jpg); background-repeat: repeat }*/


header { float: left; width: 100%; padding-top: 20px; text-align: center}
	
	header ul {
		text-align: right;
	}
	
	header ul li {
		display: inline;
	}
	
	header h1 { 
		font-size: 30px;
		text-align: center
	}
	
	header hr {
		margin-top: 20px;
	}

	
nav { float: left; width: 25%; height: auto; padding-top: 50px; }

	nav ul {
		text-align: left
	}
	
	nav ul li {
		padding: 10px;
		margin: 5px;
		border-left: 1px solid black;
		border-right: 1px solid black;
		background-color: #FFFFFF;
		cursor: pointer;
	}
	
	nav ul li:first-child {
		border-top: 1px solid black;
		border-radius: 7px 0 0 0;
	}
	nav ul li:last-child {
		border-bottom: 1px solid black;
		border-radius: 0 0 7px 0;
	}
	
	nav ul li a {
		color: #0000FF;
	}


#contenido { float: left; width: 72.5%; margin-left: 2.5%; padding-top: 50px; text-align: center; }

	#contenido p {
		text-align: left;
	}

	#contenido img {
		width: inherit;
		height: inherit;
	}


footer { float: left; width: 100%; padding-top: 50px; padding-bottom: 20px }

	footer hr {
		margin-bottom: 20px;
	}

	footer p {
		text-align: center
	}
